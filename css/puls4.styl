gris_oscuro = #444
naranja = #DD4F24
azul = #22BCE0
gris_texto = #7A7A7A

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?-gf3xao');
	src:url('../fonts/icomoon.eot?#iefix-gf3xao') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-gf3xao') format('woff'),
		url('../fonts/icomoon.ttf?-gf3xao') format('truetype'),
		url('../fonts/icomoon.svg?-gf3xao#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	transition font-size 1s

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content "-"
				

form
	display none
	padding 0.8em

	label
		display inline-block
		width 60px				

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 55
	
	.logo
		border-right 1px solid azul
		width 60px
		float left
		img
			width 52px

	.titular
		margin 0 80px 0 70px

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
		
		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			
			&:before
				content "\e600"
				display inline-block
				font-family "iconitos"
				margin 0 3px 0 0
				text-shadow none
		
		.sizer
			text-decoration none
			
		.titulo
			font-size 1.1em
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 69
			img
				border-radius 50%
				width 50px

		.flechita
			background-color naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%
			z-index 0	
			
			&:after
				content "\e603"
				display block
				font-family "iconitos"
				margin 2px 0 0 0 
				text-shadow 1px 1px 0px black
		

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap /* Fuera al navegador a no llevar a otra linea los elementos*/

		&::-webkit-scrollbar
			display none		

		li
			display inline-block

			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		margin-bottom 1em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0 
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none

					&:before
						color #FCB92D
						content "\e601"
						font-family "iconitos"

			.votos
				float left

				.up
				.down
					font-family "iconitos"
					font-size 1.5em
					text-decoration none
					vertical-align middle

				.down
					color red
					&:before
						content "\e603"

				.up
					color green
					&:before
						content "\e602"
		.descripcion
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
				
				.fecha
					float right
					margin 0 1em 0 0 

				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0 

			.imagen
				float left
				margin 0
				padding 0

				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 1200px)
	.posts
		.post
			display inline-block
			width 31%
			vertical-align top
			margin-right 2%

/* PARA TABLETS*/
@media screen and (min-width: 768px) and (max-width: 1199px)
	
	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative
				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top

			&:nth-child(odd)
				margin-right 2%

